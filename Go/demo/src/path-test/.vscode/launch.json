    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug: source",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}",
            "console": "integratedTerminal",
            "trace": "verbose",
        },
        {
            "name": "Debug: exec",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "program": "${workspaceRoot}/__debug_bin",
            "console": "integratedTerminal",
            "trace": "verbose",
            "preLaunchTask": "go: build (debug)"
        },
        {
            "name": "Debug: Remote",
            "type": "go",
            "debugAdapter": "dlv-dap",
            "request": "launch",
            "port": 2345,
            "host": "127.0.0.1",
            "mode": "exec",
            "program": "${workspaceRoot}/__debug_bin",
            "preLaunchTask": "build(debug) & launch dlv server",
            "substitutePath": [],
            "trace": "verbose",
            "asRoot": true,
            "showLog": true,
            "showGlobalVariables": true,
            "showRegisters": true,
        },
    ]
}