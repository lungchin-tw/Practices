{
    // "compileOnSave": true,
    "compilerOptions": {
        // "watch": true,
        "module": "ES2020",
        "target": "es2020",
        "jsx": "preserve",
        
        "sourceMap": true,
        "outDir": "./build",
        "rootDir": "./src",
        "removeComments": true,
        "noEmitOnError": true,

        "strict": true,

        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "moduleResolution": "Classic",
        "traceResolution": false
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}